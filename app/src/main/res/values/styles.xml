<resources>
    <!-- Base application theme. -->
    <style name="GystBaseTheme" parent="Platform.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textAppearanceButton">@style/Gyst.TextAppearanceButton</item>
    </style>
    <style name="GystTheme" parent="GystBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorDisabledOnSurface">@color/colorDisabledOnLightSurface</item>
    </style>

    <style name="Gyst.Password.RuleAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/password_help_color</item>
    </style>

    <style name="Gyst.ProgressButton" parent="">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@drawable/button_progress</item>
        <item name="spinning_bar_color">?attr/colorAccent</item>
        <item name="spinning_bar_padding">6dp</item>
        <item name="spinning_bar_width">4dp</item>
    </style>


    <style name="Gyst.TextAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:padding">1sp</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/biometric_prompt_negative_button_color</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/biometric_prompt_negative_button_color</item>
    </style>

    <style name="Button.Positive" parent="Widget.MaterialComponents.Button">
        <item name="colorOnPrimary">#efefef</item>
        <item name="colorOnSurface">#efefef</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:textColor">@color/positive_button_text_selector</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/mtrl_btn_ripple_color</item>
        <item name="backgroundTint">@color/positive_bg_color_selector</item>
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
    </style>
</resources>